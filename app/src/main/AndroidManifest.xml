<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.electrocraft.nirzo.pluse">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".controller.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="pulse_db.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />
        <meta-data android:name="AA_MODELS"
            android:value="com.electrocraft.nirzo.pluse.model.dba.User"/>

        <activity android:name=".view.MainActivity" />
        <activity
            android:name=".view.activity.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.LoginActivity" />
        <activity
            android:name=".view.activity.patient.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name=".view.activity.patient.SignUpEmailActivity" />
        <activity android:name=".view.activity.patient.OTP_Activity" />
        <activity android:name=".view.activity.patient.SexNDobRegActivity" />
        <activity android:name=".view.activity.doctor.DocRegistrationActivity" />
        <activity android:name=".view.activity.patient.PtDoctorProfileActivity" />
        <activity android:name=".view.activity.patient.PtAppointBookActivity" />
        <activity android:name=".view.activity.doctor.DoctorHomeActivity"></activity>
    </application>

</manifest>