<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_def"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/lr_iv_DocImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_doctor"
        app:civ_border_color="#FFFF"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/lr_tv_AppointmentDateNTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="20dp"
        android:text="Dr. Faisal Khali koborerdfjkdsjfl" />

    <TextView
        android:padding="@dimen/padding_def"
        android:id="@+id/lr_tv_DocName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lr_iv_DocImage"
        android:text="Doctor Nam,e"
        android:textSize="16sp"
        android:textStyle="bold" />
 
    <TextView
        android:paddingLeft="@dimen/padding_def"
        android:id="@+id/lr_tv_Specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lr_tv_DocName"
        android:text="Dentiest"
        android:textStyle="bold" />


    <Button
        android:id="@+id/lr_btn_Call"
        style="@style/general_button_style"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lr_tv_DocName"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="30dp"
        android:text="Call" />


</RelativeLayout>