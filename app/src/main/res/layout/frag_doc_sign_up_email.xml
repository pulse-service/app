<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.patient.SignUpEmailActivity">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/appbar_layout" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar">

        <RelativeLayout style="@style/container_style_1">

            <EditText
                android:id="@+id/edit_name"
                style="@style/edit_text_style_1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="36dp"
                android:hint="@string/name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edt_email"
                style="@style/edit_text_style_1"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_name"
                android:layout_marginTop="14dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <Spinner
                android:id="@+id/spCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_email"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="22dp"
                android:layout_toStartOf="@+id/edt_phoneNo" />

            <EditText
                android:id="@+id/edt_phoneNo"
                style="@style/edit_text_style_1"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/edt_email"
                android:layout_marginTop="10dp"
                android:hint="@string/phone_no1"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edt_password"
                style="@style/edit_text_style_1"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edt_phoneNo"
                android:layout_marginTop="14dp"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_password"
                android:layout_marginTop="30dp"
                android:text="@string/otp_info" />


            <TextView
                android:id="@+id/tv_labe2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label"
                android:layout_marginTop="@dimen/margin_top_def"
                android:gravity="center"
                android:text="@string/lable" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_labe2"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_labe3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="@string/terms_N_condition"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_labe4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/privacyNpolicy"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btnSignUpContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ll"
                android:layout_marginTop="20dp"
                android:background="@drawable/ripple_effect_reg"
                android:text="@string/continu"
                android:textColor="@color/color_white" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
