<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.doctor.DoctorHomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <!--android:layout_height="?attr/actionBarSize"-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/iv_doc_cover_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/appbar"
        android:src="@color/red" />

    <FrameLayout
        android:id="@+id/doc_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_doc_cover_pic">


    </FrameLayout>

    <!--   experiment to the video
       <Button
           android:layout_below="@+id/doc_content_frame"
           android:id="@+id/btn_video"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Button"
           app:layout_behavior="" />-->
</RelativeLayout>
