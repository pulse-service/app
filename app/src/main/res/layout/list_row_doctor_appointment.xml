<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_def">


    <TextView
        android:id="@+id/lr_tv_AppointmentDateNTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="e3434" />


    <TextView
        android:id="@+id/lr_tv_patientShortDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lr_tv_PatientName"
        android:layout_marginTop="10dp"
        android:text="Dr. Faisal Khali koborerdfjkdsjfl" />

    <TextView
        android:id="@+id/lr_tv_PatientId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_def"
        android:text="Patient ID"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lr_tv_PatientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lr_tv_PatientId"
        android:padding="@dimen/padding_def"
        android:text="Patient Name"
        android:textStyle="bold" />


    <Button
        android:id="@+id/lr_btn_Call"
        style="@style/general_button_style"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lr_tv_PatientName"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="10dp"
        android:text="Call" />


</RelativeLayout>