<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.electrocraft.nirzo.pluse.view.fragment.PtSpecializationFragment">


    <RelativeLayout style="@style/container_style_2">


        <Button
            style="@style/general_button_style"
            android:id="@+id/btn_symptom_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/save" />

        <!--Spinner-->
        <RelativeLayout
            android:layout_alignParentStart="true"
            android:id="@+id/spinner_layout"
            style="@style/spinner_border_style">

            <Spinner
                android:id="@+id/spBloodGroup"
                style="@style/spinner_style" />

            <ImageView style="@style/spinner_image_style" />
        </RelativeLayout>


        <EditText

            android:id="@+id/edtWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spinner_layout"
            android:ems="10"
            android:hint="@string/weight"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtBp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/edtWeight"
            android:ems="10"
            android:hint="@string/bp"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtFamilyDiseaseHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/edtBp"
            android:ems="10"
            android:hint="@string/family_disease_history"
            android:inputType="text" />


        <EditText
            android:id="@+id/edtExistingMedicalReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/edtFamilyDiseaseHistory"
            android:ems="10"
            android:hint="@string/existing_medical_report"
            android:inputType="textPersonName" />

    </RelativeLayout>

</FrameLayout>
