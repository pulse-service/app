<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.electrocraft.nirzo.pluse.view.fragment.PtSpecializationFragment">


    <RelativeLayout style="@style/container_style_2">


        <Button
            android:id="@+id/btn_symptom_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/save" />

        <EditText
            android:id="@+id/edtFatherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:ems="10"
            android:hint="@string/father_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtMotherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edtFatherName"
            android:ems="10"
            android:hint="@string/mother_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/edtMotherName"
            android:ems="10"
            android:hint="DOB"
            android:inputType="date" />

        <TextView
            android:id="@+id/tvBloodLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText8"
            android:layout_marginTop="17dp"
            android:text="Age" />

        <EditText
            android:id="@+id/edtPresentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvBloodLbl"

            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="@string/present_address"
            android:inputType="textPersonName" />

    </RelativeLayout>

</FrameLayout>
