<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--A custom materials theme base for tab view-->

    <style name="MaterialsTheme" parent="MaterialsTheme.Base">

    </style>

    <!--the parent theme-->
    <style name="MaterialsTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary_1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_1</item>
        <item name="colorAccent">@color/colorAccent_1</item>
    </style>

    <!--A style for Container layout ie: LinerLayout or RelativeLayout-->

    <style name="container_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/container_margin</item>
        <item name="android:paddingStart">@dimen/container_margin</item>
        <item name="android:paddingEnd">@dimen/container_margin</item>
        <item name="android:paddingRight">@dimen/container_margin</item>
    </style>

    <style name="container_style_2">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/container_margin</item>
        <item name="android:paddingStart">@dimen/container_margin</item>
        <item name="android:paddingEnd">@dimen/container_margin</item>
        <item name="android:paddingRight">@dimen/container_margin</item>
        <item name="android:paddingTop">@dimen/actionbar_to_container_spacing</item>


    </style>

    <!--   A style for Edit Text     -->

    <style name="edit_text_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--    <item name="android:background">@drawable/border_edt_text</item>    -->
        <item name="android:ems">10</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
    </style>

    <!--spinner item style-->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <!--spinner  drop Down item style-->
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <!--spinner border-->
    <style name="spinner_border_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spinner_border_margin_top</item>
        <item name="android:background">@drawable/border_spinner</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/spinner_margin_left</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:spinnerMode">dropdown</item>

    </style>

    <style name="spinner_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spinner_image_height</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_spinner_indicator</item>

    </style>

    <style name="text_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">@dimen/padding_def</item>
        <item name="android:textSize">@dimen/label_txt_size</item>
    </style>

    <!--Doctor Name Title-->
    <style name="text_doctor_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_marginTop">@dimen/margin_top_def</item>
        <item name="android:layout_marginStart">@dimen/margin_top_def</item>
        <item name="android:textSize">@dimen/doc_name_size</item>
    </style>

    <!--Line Border style-->
    <style name="line_border_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_border_height</item>
        <item name="android:background">@color/line_border_color_white_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_top_def</item>
    </style>

    <style name="pin_edit_text_style">
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:minEms">2</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_marginStart">@dimen/margin_top_def</item>
        <item name="android:background">@drawable/general_border_box</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_def</item>
        <item name="android:inputType">number</item>

        <!-- <item name="android:inputType">textPassword</item>-->
    </style>
</resources>
